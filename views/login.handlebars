<div class="container">
    <h1>Log In</h1>
    <div>
        <div class="row">
            <form class="col m8 s12" id="loginForm">
                <div class="row">
                    <div class="input-field col s12">
                        <label for="email">Email</label>
                        <input type="email" class="validate" id="login-email">
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <label for="password">Password</label>
                        <input type="password" class="validate" id="login-pwd">
                    </div>
                </div>
                <button type="submit" class="waves-effect waves-light btn" id="login-btn">Log In</button>
            </form>
        </div>
    </div>
</div>