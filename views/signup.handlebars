<div class="container">
    <h1>Sign Up</h1>
    <div>
        <div class="row">
            <form class="col s12" id="signUpForm">
                <div class="row">
                    <div class="input-field col s12">
                        <label for="username">Username</label>
                        <input  id="signup-username" type="text" class="validate">
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <label for="email">Email</label>
                        <input id="signup-email" type="email" class="validate">
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <label for="password">Password</label>
                        <input id="signup-pwd" type="password" class="validate">
                    </div>
                </div>
                <button type="submit" class="waves-effect waves-light btn" id="signup-btn">Sign Up</button>
            </form>
        </div>
    </div>
</div>